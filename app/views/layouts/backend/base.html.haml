%html{ html_attrs('fr-fr') }
  %head
    %meta{ 'http-equiv' => 'Content-type', 'content' => 'text/html; charset=utf-8' }
    %title Backend
  %body
    - if logged_in?
      #admin_bar
        %div
          Identifié en tant que:
          = link_to_current_admin
        %div= link_to 'Déconnexion', admin_logout_path, :method => :delete
    - unless flash[:error].blank?
      .error&= flash[:error]
    - unless flash[:notice].blank?
      .notification&= flash[:notice]
    = yield
