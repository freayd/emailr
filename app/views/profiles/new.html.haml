%h1 Nouveau profil

= error_messages_for :profile
- form_for @profile do |f|

  %fieldset
    %legend Informations générales
    %p
      = label_tag 'name', 'Nom'
      %br
      = f.text_field :name
    %p
      = label_tag 'description', 'Description'
      %br
      = f.text_area :description, :rows => 3

  %fieldset
    %legend Critères
    - @profile.criteria.each_with_index do |criterion, index|
      - fields_for "criteria[]", criterion do |criterion_fields|
        %div
          = criterion_fields.select     :field,     criterion_field_options
          = criterion_fields.select     :condition, criterion_condition_options
          = criterion_fields.text_field :value

  %p= submit_tag 'Enregistrer'
